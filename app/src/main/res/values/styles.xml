<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDarkk</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkk</item>
        <item name="colorAccent">@color/colorAccentt</item>
        <item name="dialogSheetAccent">@color/colorAccentt</item>
        <item name="actionBarPopupTheme">@style/AppTheme.PopupOverlay</item>
    </style>

    <style name="AppTheme2" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkk</item>
        <item name="colorAccent">@color/colorAccentt</item>
        <item name="dialogSheetAccent">@color/colorAccentt</item>
        <item name="actionBarPopupTheme">@style/AppTheme.PopupOverlay</item>
    </style>

    <style name="BottomNavigationBarTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
