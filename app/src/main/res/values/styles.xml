    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="SplashAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDarkk</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkk</item>
        <item name="colorAccent">@color/colorAccentt</item>
        <item name="android:windowBackground">@drawable/splash_window_bg</item>
        <item name="dialogSheetAccent">@color/colorAccentt</item>
    </style>

