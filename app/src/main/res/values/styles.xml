        <item name="colorPrimaryDark">@color/colorPrimaryDarkk</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="dialogSheetAccent">@color/colorAccentt</item>
    </style>

    <style name="ImagePostTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
